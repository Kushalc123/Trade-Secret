{
  "compilerOptions": {
    /* ---------- Language & environment ---------- */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* ---------- Module resolution ---------- */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",

    /* ---------- Type-checking ---------- */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "incremental": true,

    /* ---------- Path alias so `@/â€¦` works ---------- */
    "baseUrl": ".",
    "paths": {
    "@/*": ["./src/*"]
    },

    /* ---------- Next.js plugin ---------- */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}